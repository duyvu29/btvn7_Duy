<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <TextView
        android:id="@+id/txtCancelLayoutAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:text="Hủy"
        android:textColor="#007AFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtEditLayoutAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/txtSaveLayoutAdd"
        android:layout_toEndOf="@id/txtCancelLayoutAdd"
        android:gravity="center"
        android:text="Thêm thư mục"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSaveLayoutAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:text="Lưu"
        android:textColor="#007AFF"
        android:textSize="18sp" />
</RelativeLayout>